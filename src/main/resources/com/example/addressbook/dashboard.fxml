<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addressbook.DashboardController">
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="menu-bar">
                <Button text="Dashboard">
                    <tooltip>
                        <Tooltip text="View Dashboard" />
                    </tooltip>
                </Button>
                <Button onAction="#toSchedule" text="Schedule">
                    <tooltip>
                        <Tooltip text="View schedule" />
                    </tooltip>
                </Button>
                <Button onAction="#toGoals" text="Goals">
                    <tooltip>
                        <Tooltip text="View goals" />
                    </tooltip>
                </Button>
                <Button onAction="#toSetup" text="Setup">
                    <tooltip>
                        <Tooltip text="Setup application" />
                    </tooltip>
                </Button>
                <HBox HBox.hgrow="ALWAYS" />
                <Button fx:id="toProfileButton" onAction="#toProfile" style="-fx-font-size: 15px;" text="Profile">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 33px;" text="Welcome!">
                <font>
                    <Font name="System Bold" size="33.0" />
                </font>
            </Label>
            <Label fx:id="nameLabel" alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 18px;" text="User Name">
                <font>
                    <Font name="System" size="18.0" />
                </font>
            </Label>
            <Region maxHeight="1.0" prefHeight="1.0" style="-fx-background-color: yellow;" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="TOP_CENTER" spacing="10">
                    <Label style="-fx-font-size: 15px;" text="Here's your app usage this week">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
               <ComboBox fx:id="purposeFilter" prefWidth="150.0" />
               <ComboBox fx:id="timeFilter" prefHeight="25.0" prefWidth="153.0" />
                    <PieChart fx:id="pieChart" prefHeight="200.0" prefWidth="260.0" />
                </VBox>
                <VBox alignment="TOP_CENTER" spacing="10">
                    <Label style="-fx-font-size: 15px;" text="Start tracking!">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                    <TilePane fx:id="tilePane" alignment="TOP_CENTER" prefHeight="164.0" prefWidth="297.0" />
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
