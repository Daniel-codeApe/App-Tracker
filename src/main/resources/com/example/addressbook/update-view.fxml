<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.addressbook.UpdateController">
   <children>
      <VBox alignment="CENTER" spacing="20">
         <Label text="Update Profile">
            <font>
               <Font name="System Bold" size="33.0" />
            </font>
         </Label>
         <VBox alignment="CENTER" spacing="10">
            <Label text="Username:" />
            <TextField fx:id="usernameField" maxWidth="200.0" />
            <Label text="Email:" />
            <TextField fx:id="emailField" maxWidth="200.0" />
            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateProfile" text="Update" />
         </VBox>
      </VBox>
   </children>
</StackPane>
